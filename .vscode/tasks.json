{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test current file",
            "type": "shell",
            "command": "poetry run atcoder-tools test -d ${fileDirname} --config ${workspaceFolder}/.atcodertools.toml",
            "problemMatcher": []
        },
        {
            "label": "submit current file",
            "type": "shell",
            "command": "poetry run atcoder-tools submit -d ${fileDirname} --config ${workspaceFolder}/.atcodertools.toml"
        }
    ]
}