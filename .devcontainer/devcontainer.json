{
"name": "Programming Competition",
    "context": "..",
    "dockerFile": "Dockerfile",
    // "runArgs": ["--env-file", ".devcontainer/devcontainer.env"],
    "containerEnv": {"CPLUS_INCLUDE_PATH": "/workspaces/atcoder/ac-library"},
    "settings": { 
        "terminal.integrated.defaultProfile.linux": "/bin/bash",
        "python.pythonPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.linting.pylintPath": "/usr/local/bin/pylint"
    },

    "appPort": [ 8501 ],

    "remoteEnv": {
        "ATCODER_USERNAME": "${localEnv:ATCODER_USERNAME}",
        "ATCODER_PASSWORD": "${localEnv:ATCODER_PASSWORD}"
    },
    // "postCreateCommand": "chmod 700 scripts/autologin.sh && ./scripts/autologin.sh",

    // "remoteUser": "vscode",

    "extensions": [
		"ms-python.python",
		"coenraads.bracket-pair-colorizer-2",
		"sanaajani.taskrunnercode",
		"ms-vscode.cpptools",
		"austin.code-gnu-global",
        "eamodio.gitlens",
        "ms-vsliveshare.vsliveshare"
    ],
}